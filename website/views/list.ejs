<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  </head>
  <body>
    <nav class="navbar container is-max-desktop">
      <h1 class="title">Shopping List</h1>
    </nav>
    <table class="table container is-fullwidth is-striped" id="list">
      <tbody>
        <% list.forEach(item => {%>
          <tr>
            <td><%= item.content %></td>
            <td>
              <form action="/items/<%= item.id %>/update" method="POST">
                <input type="checkbox" name="done" onChange="this.form.submit()" <%  if (item.done) {%>checked<%}%> >
                <input class="is-hidden" type="text" name="content" value="<%= item.content%>">
              </form>
            </td>
          </tr>
        <%}) %>
        <tr>
          <td>
            <form action="/items/add" method="POST">
                <input class="input" type="text" name="content" />
            </form>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
