<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  </head>
  <body>
    <nav class="navbar container is-max-desktop">
      <h1 class="title">Shopping List</h1>
    </nav>
    <table class="table container is-fullwidth is-striped" id="list">
      <tbody>
        <% list.forEach(item => {%>
          <tr>
            <td><%= item.content %></td>
            <td>
              <a href="/items/<%=item.content%>/<%=!item.done%>">
                <input type="checkbox" <%  if (item.done) {%>checked<%}%>>
              </a>
            </td>
          </tr>
        <%}) %>
        <tr>
          <form action="/items/"></form>
        </tr>
      </tbody>
    </table>
  </body>
</html>
